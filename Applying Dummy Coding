#Applying Dummy encoding for the categorical variables artist_name and track_name.
install.packages('fastDummies')
library('fastDummies')

#Creates Dummy Variables
SpotifyTracks$artist_name <- ifelse(SpotifyTracks$explicit == 'artist_name', 1, 0)
SpotifyTracks$track_name <- ifelse(SpotifyTracks$explicit == 'track_name', 1, 0)
head(SpotifyTracks)

SpotifyTracks <- dummy_cols(SpotifyTracks, select_columns = 'explicit')
head(SpotifyTracks)
