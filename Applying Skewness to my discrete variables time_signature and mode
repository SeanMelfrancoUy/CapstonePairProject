#Applying Skewness for the discrete variables time_signature and mode.
#time_signature
zscore.time_signature <- (SpotifyTracks$time_signature -
                              mean(SpotifyTracks$time_signature))/sd(SpotifyTracks$time_signature)
zscore.time_signature

time_signature_skew <- (3*(mean(SpotifyTracks$time_signature)- median(SpotifyTracks$time_signature)))/ sd(SpotifyTracks$time_signature)
zscore.time_signature_skew <-
  (3*(mean(zscore.time_signature)- median(zscore.time_signature)))/
  sd(zscore.time_signature)
time_signature_skew;zscore.time_signature_skew

#mode
zscore.mode <- (SpotifyTracks$mode - 
                  mean(SpotifyTracks$time_signature))/sd(SpotifyTracks$time_signature)
zscore.time_signature

time_signature_skew <- (3*(mean(SpotifyTracks$time_signature)- median(SpotifyTracks$time_signature)))/ sd(SpotifyTracks$time_signature)
zscore.time_signature_skew <-
  (3*(mean(zscore.time_signature)- median(zscore.time_signature)))/
  sd(zscore.time_signature)
time_signature_skew;zscore.time_signature_skew
